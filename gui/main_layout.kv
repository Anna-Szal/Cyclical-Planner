#:kivy 2.1.0




<TabbedPanelHeader>:
    background_normal: ''
    background_down: 'gui/images/button_down.png'
    background_color: complementary_light
    color: white


<MainLayout>:
    do_default_tab: False
    tab_pos: 'top_mid'
    tab_height: root.height / 8
    tab_width: root.width / 4
    

    canvas.before:
        Color:
            rgba: (.8, .8, .8, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    TabbedPanelItem:
        text: 'Planner'
        PlannerLayout:

    TabbedPanelItem:
        text: 'Edit cycles'
        Label:
            text: 'under construction'

    TabbedPanelItem:
        text: 'Statistics'
        Label:
            text: 'under construction'

    TabbedPanelItem:
        text: 'Settings'
        Label:
            text: 'under construction'
