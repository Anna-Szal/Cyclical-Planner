#:kivy 2.3.0



<EditCyclesLayout>:
    cycles_list: cycles_list
    info: info
    new_cycle: new_cycle

    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)  # white
        Rectangle:
            size: self.size
            pos: self.pos
    
    BoxLayout:
        orientation: 'horizontal'
        size_hint_max_y: 60
        Label:
            text: 'PLAN'          
            font_size: 22
        Label:
            text: 'PERIOD (days)'
            font_size: 22
        Label:
            text: 'NEXT DATE'
            font_size: 22

    CyclesList:
        id: cycles_list
        do_scroll_x: False
        do_scroll_y: True

    Label:
        id: info
        size_hint_max_y: 40
        font_size: 18
        color: alert

    Label:
        text: ' Add new cycle:'
        halign: 'left'
        size_hint_max_y: 30
        text_size: self.size

    NewCycle:
        id: new_cycle
        size_hint_max_y: 40
        size_hint_x: .9
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    Button:
        text: '+'
        background_color: (.6, .6, .6, 1)
        on_press: new_cycle.create_new_cycle()
        size_hint: .9, .1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        font_size: 60