#:kivy 2.3.0

#:import utils kivy.utils
#padding = [2]*4



<ArrowButton>:
    original_color: complementary_dark
    highlight_color: complementary_light
    text: '<<'
    size_hint_y: .25
    background_color: none
    font_size: 80


<PlannerLayout>:
    done_list: done_list
    todo_list: todo_list
    done_calendar: done_calendar
    todo_calendar: todo_calendar
    
    size: root.size
    pos: root.pos
    cols: 3

    canvas.before:
        Color:
            rgba: white
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        padding: 20

        Label:
            text: 'DONE'
            size_hint_max_y: 80
            font_size: 40

        TaskList:
            id: done_list

        CalendarWidget:
            id: done_calendar

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: .2
        size: self.size
        pos: self.pos
        
        Widget:
            size_hint: (1, .4)

        ArrowButton:
            on_press: root.move_to_done()

        Widget:

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        padding: 20

        Label:
            text: 'TO DO'
            size_hint_max_y: 80
            font_size: 40

        TaskList:
            id: todo_list

        CalendarWidget:
            id: todo_calendar
