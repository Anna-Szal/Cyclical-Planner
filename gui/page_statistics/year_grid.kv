#:kivy 2.3.0



<DayCell>:
    background_color: white
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos


<TodayCell>:
    canvas.before:
        Color:
            rgba: complementary_dark
        Line:
            rectangle: (self.x, self.y, self.height, self.width)


<YearGrid>:
    rows: 7
    size_hint: None, None
    pos_hint: {'top': 1}

    canvas.before:
        Color:
            rgba: white
        Rectangle:
            size: self.size
            pos: self.pos